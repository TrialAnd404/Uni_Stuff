= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :publisher
    = f.text_field :publisher
  .field
    = f.label :pub_year
    = f.number_field :pub_year
  .field
    = f.label :edition
    = f.number_field :edition
  .field
    = f.label :isbn
    = f.text_field :isbn
  .actions
    = f.submit 'Save'
